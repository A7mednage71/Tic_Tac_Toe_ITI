<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER" spacing="30.0" stylesheets="/home_screen_style.css" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.finalprojectclient.HomeController">
    <children>
        <Text styleClass="title-text" text="Tic Tac Toe">
            <VBox.margin>
                <Insets bottom="10" top="20" />
            </VBox.margin>
        </Text>

        <StackPane maxWidth="-Infinity">
            <children>
                <GridPane hgap="5" styleClass="icon-container" vgap="5">
                    <children>
                        <StackPane styleClass="icon-cell" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <Text styleClass="icon-text" text="X" />
                            </children>
                        </StackPane>
                        <StackPane styleClass="icon-cell" style="-fx-background-color: transparent;" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <Text style="-fx-fill: #cbc0ad; -fx-stroke: #cbc0ad; -fx-stroke-width: 2;" styleClass="icon-text" text="O" />
                            </children>
                        </StackPane>
                        <StackPane styleClass="icon-cell" style="-fx-background-color: transparent;" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <children>
                                <Text style="-fx-fill: #6a8c3d; -fx-stroke: #6a8c3d; -fx-stroke-width: 2;" styleClass="icon-text" text="O" />
                            </children>
                        </StackPane>
                        <StackPane styleClass="icon-cell" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <Text styleClass="icon-text" text="X" />
                            </children>
                        </StackPane>
                    </children>
                </GridPane>
            </children>
        </StackPane>

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button styleClass="main-button" text="Play vs Computer" />
                <Button styleClass="main-button" text="Two Players" />
            </children>
        </VBox>

        
    </children>
</VBox>