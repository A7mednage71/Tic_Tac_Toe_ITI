<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<VBox alignment="TOP_CENTER"
      prefWidth="800.0"
      prefHeight="600.0"
      minWidth="800.0"
      minHeight="600.0"
      spacing="30.0"
      stylesheets="/home_screen_style.css"
      xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.mycompany.finalprojectclient.controllers.HomeController">

    <children>

        <Text styleClass="title-text" text="Tic Tac Toe">
            <VBox.margin>
                <Insets bottom="10" top="20"/>
            </VBox.margin>
        </Text>

        <StackPane maxWidth="-Infinity">
            <children>
                <GridPane hgap="5" vgap="5" styleClass="icon-container">
                    <children>
                        <StackPane styleClass="icon-cell" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Text styleClass="icon-text" text="X"/>
                        </StackPane>

                        <StackPane styleClass="icon-cell" style="-fx-background-color: transparent;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Text styleClass="icon-text"
                                  style="-fx-fill: #cbc0ad; -fx-stroke: #cbc0ad; -fx-stroke-width: 2;"
                                  text="O"/>
                        </StackPane>

                        <StackPane styleClass="icon-cell" style="-fx-background-color: transparent;"
                                   GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Text styleClass="icon-text"
                                  style="-fx-fill: #6a8c3d; -fx-stroke: #6a8c3d; -fx-stroke-width: 2;"
                                  text="O"/>
                        </StackPane>

                        <StackPane styleClass="icon-cell" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Text styleClass="icon-text" text="X"/>
                        </StackPane>
                    </children>
                </GridPane>
            </children>
        </StackPane>

        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Button styleClass="main-button"
                        text="Play vs Computer"
                        onAction="#playVsComputer"/>

                <Button styleClass="main-button"
                        text="Two Players"
                        onAction="#twoPlayers"/>
            </children>
        </VBox>

    </children>
</VBox>
