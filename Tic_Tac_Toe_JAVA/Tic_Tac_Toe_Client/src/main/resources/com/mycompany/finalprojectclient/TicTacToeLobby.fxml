<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="400.0" style="-fx-background-color: #2D2926;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="40.0" />
         </padding>
         <children>
            <Label text="Tic Tac Toe" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            <Label text="Choose an Online Player to Invite" textFill="#88a050">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #3B3631; -fx-background-radius: 15; -fx-border-radius: 15; -fx-border-color: #4A443F;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox spacing="10.0" style="-fx-background-color: #3B3631;">
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                     <children>
                        
                        <HBox alignment="CENTER_LEFT" prefHeight="70.0" spacing="15.0" style="-fx-border-color: transparent transparent #4A443F transparent;">
                           <children>
                              <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                                 </ImageView>
                              <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                 <children>
                                    <Label text="ChessMaster123" textFill="WHITE">
                                       <font>
                                          <Font name="System Bold" size="14.0" />
                                       </font>
                                    </Label>
                                    <Label text="1520 Online" textFill="#888888" />
                                 </children>
                              </VBox>
                              <Circle fill="#50C878" radius="4.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
                              <Button mnemonicParsing="false" style="-fx-background-color: #4A5D23; -fx-text-fill: white; -fx-background-radius: 5;" text="Invite">
                                 <padding>
                                    <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                                 </padding>
                              </Button>
                           </children>
                           <padding>
                              <Insets bottom="10.0" left="5.0" right="5.0" top="10.0" />
                           </padding>
                        </HBox>
                        </children>
                  </VBox>
               </content>
            </ScrollPane>

            <Button mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #4A5D23; -fx-text-fill: white; -fx-background-radius: 5;" text="Back">
               <padding>
                  <Insets bottom="10.0" top="10.0" />
               </padding>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>